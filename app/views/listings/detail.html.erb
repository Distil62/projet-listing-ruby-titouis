<div class="detail">
  <h1><%= @listing.name %></h1>
  <p><i class="detail-author-date">Post√© par <%= @listing.author %>, le <%= @listing.date.to_formatted_s(:long) %></i>
  </p>
  <div class="row">
    <div class="cell-4 offset-4">
      <%= image_tag("#{@listing.photo.id}", alt: @listing.name, class: "mr-8 pb-10 img-preview") %>
    </div>
  </div>
  <hr/>
  <p class="detail-description"><%= @listing.description %></p>
  <div class="float-right">
    <button class="button bg-orange fg-white " onclick="Metro.dialog.open('#contactSellerDialog')">Contact
      seller
    </button>
  </div>

  <div id="contactSellerDialog" class="dialog no-border" data-role="dialog">
    <div class="dialog-title bg-darkGrayBlue fg-white no-border">Contact Seller
      <span class="float-right js-dialog-close fg-gray c-pointer">
      X
      </span></div>
    <div class="dialog-content bg-grayBlue no-margin no-border">
      <%= form_tag @listings_contact_url, method: 'post' do |f| %>
        <input hidden name="target" value=<%= @listing.name %>>
        <input hidden name="article" value=<%= @listing %>>
        <label for="message" class="fg-white">Message :</label>
        <textarea name="message" id="message" cols="30" rows="10"></textarea>
        </div>
        <div class="dialog-actions bg-darkGrayBlue no-margin no-border">
          <input type="submit" value="send" class="button bg-orange js-dialog-close fg-white">
        </div>
      <% end %>
      </div>
</div>