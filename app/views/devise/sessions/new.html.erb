<div class="w-50 h-50 pos-fixed pos-center">
  <h1 class="mb-10">Log in</h1>
  <div class="bg-grayMouse">
    <div class="p-10">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: 'fg-white' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'fg-white' %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "fg-white" %>
          </div>
        <% end -%>
        <%= render "devise/shared/links" %>
        <div class="actions">
          <%= f.submit "Log in", class: 'button bg-orange fg-white float-right' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
